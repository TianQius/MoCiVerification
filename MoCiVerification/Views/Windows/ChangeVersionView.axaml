    <Grid Margin="10">
        <suki:GlassCard Margin="0,10,0,30" Width="300"
                        animations:SquishyOverExtensions.Enable="True"
                        animations:SquishyOverExtensions.Intensity="0.05"
                        animations:SquishyOverExtensions.SquishDepth="0.05">
            <suki:BusyArea IsBusy="{Binding IsChanging}">
                <StackPanel>
                        
                    <TextBlock Margin="6,0,0,3"
                               FontWeight="DemiBold" TextWrapping="Wrap"
                               Foreground="{DynamicResource SukiLowText}"
                               Text="版本公告" />
                    <TextBox theme:TextBoxExtensions.Prefix="{icon:MaterialIconExt Kind=Announcement}"
                             Classes="clearButton" Height="120" TextWrapping="Wrap"
                             Text="{Binding VersionAnnounce}"
                             Watermark="Your announcement"/>
                    <TextBlock Margin="6,5,0,3"
                               FontWeight="DemiBold" TextWrapping="Wrap"
                               Foreground="{DynamicResource SukiLowText}"
                               Text="版本数据" />
                    <TextBox theme:TextBoxExtensions.Prefix="{icon:MaterialIconExt Kind=Database}"
                             Classes="clearButton" Height="120" TextWrapping="Wrap"
                             Text="{Binding VersionAnnounce}"
                             Watermark="Your data"/>
                </StackPanel>
            </suki:BusyArea>
        </suki:GlassCard>
        <Button Width="160"
                Height="40"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Classes="Flat" FontWeight="DemiBold"
                theme:ButtonExtensions.ShowProgress="{Binding IsChanging}"
                Command="{Binding ChangeVersionCommand, StringFormat='Cmd: {0}'}" 
                Content="修改" />
                
    </Grid>
        
        
        
        
</suki:SukiWindow>
