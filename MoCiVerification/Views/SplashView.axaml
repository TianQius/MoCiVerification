<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:MoCiVerification.ViewModels"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             x:DataType="vm:SplashViewModel"
             x:Class="MoCiVerification.Views.SplashView">

       <suki:GlassCard Width="300" Height="300" Margin="0,100,0,150"
                       Opacity="{Binding Opacity}"
                       IsVisible="{Binding IsVisible}">
           <Viewbox Stretch="Uniform" Margin="0">
               <PathIcon 
                   VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Foreground="{DynamicResource SukiPrimaryColor}"
                         Data="{StaticResource moci}" />
           </Viewbox>
       </suki:GlassCard>

    
    
    
    
</UserControl>
